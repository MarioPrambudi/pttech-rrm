<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:com.djavafactory.pttech.rrm.client.scaffold.ui'
  xmlns:a='urn:import:com.djavafactory.pttech.rrm.client.managed.ui'>
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName='{style.outer}'>
    <div ui:field='errors' class='{style.error}'></div>
    
    <div id='transId'><div class='{style.label}'>Trans Id</div><div class='{style.value}'><g:TextBox ui:field='transId'/></div></div>
    <div id='status'><div class='{style.label}'>Status</div><div class='{style.value}'><g:TextBox ui:field='status'/></div></div>
    <div id='mfgNumber'><div class='{style.label}'>Mfg Number</div><div class='{style.value}'><g:LongBox ui:field='mfgNumber'/></div></div>
    <div id='reloadAmount'><div class='{style.label}'>Reload Amount</div><div class='{style.value}'><r:BigDecimalBox ui:field='reloadAmount'/></div></div>
    <div id='serviceProviderId'><div class='{style.label}'>Service Provider Id</div><div class='{style.value}'><g:TextBox ui:field='serviceProviderId'/></div></div>
    <div id='transCode'><div class='{style.label}'>Trans Code</div><div class='{style.value}'><g:IntegerBox ui:field='transCode'/></div></div>
    <div id='requestedTime'><div class='{style.label}'>Requested Time</div><div class='{style.value}'><d:DateBox ui:field='requestedTime'/></div></div>
    <div id='tngKey'><div class='{style.label}'>Tng Key</div><div class='{style.value}'><g:TextBox ui:field='tngKey'/></div></div>

    <g:Button ui:field='save'>Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
