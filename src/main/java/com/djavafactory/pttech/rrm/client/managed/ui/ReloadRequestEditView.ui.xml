<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:com.djavafactory.pttech.rrm.client.scaffold.ui'
  xmlns:a='urn:import:com.djavafactory.pttech.rrm.client.managed.ui'>

  <ui:style>
   .errors {
      padding-left: 0.5em;
      background-color: red;
    }
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
 
  <g:HTMLPanel>
    <div class='{style.underline}'>    
      <h3 class='{style.header}' ui:field="editTitle">
        <ui:msg>Edit ReloadRequest</ui:msg>
      </h3>
      <h3 class='{style.header}' ui:field='createTitle'><ui:msg>New ReloadRequest</ui:msg></h3>
    </div>
    <div ui:field='errors' class='{style.errors}'></div>

    <table id='boundElementHolder' class="{style.fields}">
      <tr id='transId'><td><div class='{style.label}'>Trans Id:</div></td><td><g:TextBox ui:field='transId'/></td></tr>
      <tr id='status'><td><div class='{style.label}'>Status:</div></td><td><g:TextBox ui:field='status'/></td></tr>
      <tr id='mfgNumber'><td><div class='{style.label}'>Mfg Number:</div></td><td><g:LongBox ui:field='mfgNumber'/></td></tr>
      <tr id='reloadAmount'><td><div class='{style.label}'>Reload Amount:</div></td><td><r:BigDecimalBox ui:field='reloadAmount'/></td></tr>
      <tr id='serviceProviderId'><td><div class='{style.label}'>Service Provider Id:</div></td><td><g:TextBox ui:field='serviceProviderId'/></td></tr>
      <tr id='transCode'><td><div class='{style.label}'>Trans Code:</div></td><td><g:IntegerBox ui:field='transCode'/></td></tr>
      <tr id='requestedTime'><td><div class='{style.label}'>Requested Time:</div></td><td><d:DateBox ui:field='requestedTime'/></td></tr>
      <tr id='tngKey'><td><div class='{style.label}'>Tng Key:</div></td><td><g:TextBox ui:field='tngKey'/></td></tr>
    </table>

    <div class='{style.bar}'>
      <g:Button addStyleNames='{style.button}' ui:field='save'>Save</g:Button>
      <g:Button addStyleNames='{style.button}' ui:field='cancel'>Cancel</g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
