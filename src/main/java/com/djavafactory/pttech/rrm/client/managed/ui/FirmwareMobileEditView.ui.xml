<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:com.djavafactory.pttech.rrm.client.scaffold.ui'
  xmlns:a='urn:import:com.djavafactory.pttech.rrm.client.managed.ui'>
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName='{style.outer}'>
    <div ui:field='errors' class='{style.error}'></div>
    
    <div id='terminalId'><div class='{style.label}'>Terminal Id</div><div class='{style.value}'><g:TextBox ui:field='terminalId'/></div></div>
    <div id='firmwareFile'><div class='{style.label}'>Firmware File</div><div class='{style.value}'><g:TextBox ui:field='firmwareFile'/></div></div>
    <div id='status'><div class='{style.label}'>Status</div><div class='{style.value}'><g:TextBox ui:field='status'/></div></div>
    <div id='createdBy'><div class='{style.label}'>Created By</div><div class='{style.value}'><g:TextBox ui:field='createdBy'/></div></div>
    <div id='createdTime'><div class='{style.label}'>Created Time</div><div class='{style.value}'><d:DateBox ui:field='createdTime'/></div></div>

    <g:Button ui:field='save'>Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
